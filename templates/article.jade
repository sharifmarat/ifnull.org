extends layout

//TODO: should not be a copy-paste from layout just to override p.description..
body(class=bodyclass)
  header.header
    div.content-wrap
      block header
        div.logo
          h1
            a(href=locals.url)= locals.name
          p.description= locals.description

block content
  article.article
    header
      p.date
        span= moment.utc(page.metadata.date).format('DD MMMM YYYY')
      h2= page.title
    section.content!= typogr(page.html).typogrify()

block prepend footer
  include disqus

  div.nav
    a(href=contents.index.url) &laquo; Full blog

  if page.metadata.comments
    mixin disqus()
